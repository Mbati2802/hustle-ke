# HustleKE Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================
# Supabase Configuration
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================
# M-Pesa Daraja API Configuration
# ============================================
# Consumer Key from Daraja Portal
MPESA_CONSUMER_KEY=your-consumer-key

# Consumer Secret from Daraja Portal
MPESA_CONSUMER_SECRET=your-consumer-secret

# Passkey from Daraja Portal (for STK Push)
MPESA_PASSKEY=your-passkey

# Shortcode (Paybill or Till Number)
MPESA_SHORTCODE=174379

# Callback URL for M-Pesa (must be HTTPS and publicly accessible)
MPESA_CALLBACK_URL=https://your-domain.com/api/mpesa/callback

# Initiator Name (for B2C payments)
MPESA_INITIATOR_NAME=your-initiator-name

# Security Credential (for B2C payments)
MPESA_SECURITY_CREDENTIAL=your-security-credential

# ============================================
# OpenAI Configuration (for AI Proposal Polisher)
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key

# ============================================
# Application Configuration
# ============================================
# App URL (for production)
NEXT_PUBLIC_APP_URL=https://hustleke.co.ke

# Environment
NODE_ENV=development

# ============================================
# Optional: Third-Party Services
# ============================================
# Google reCAPTCHA v3 (for bot protection)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# SendGrid (for email notifications)
SENDGRID_API_KEY=SG.your-sendgrid-key

# Pusher/Ably (for real-time notifications)
PUSHER_APP_ID=your-pusher-app-id
PUSHER_KEY=your-pusher-key
PUSHER_SECRET=your-pusher-secret
PUSHER_CLUSTER=mt1

# Cloudinary/AWS S3 (for file storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
